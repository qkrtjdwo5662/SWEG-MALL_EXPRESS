<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- css 초기화 -->
  <link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css"
  />
  <link rel="stylesheet" href="/css/admin_userInfo.css" />
  <!-- 구글폰트 -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="icon" href="favicon.ico" type="image/x-icon" />
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans+KR:wght@100;300;400;500;700;900&display=swap"
    rel="stylesheet"
  /> 
  <title>Document</title>
</head>
<body>
  <div class="wrap">
    <%-include('./include/admin_menu.ejs')%>
    <div class="contents_area_wrap">
      <div class="container_full page_title_area">
        <div class="container_fixed page_title_wrap">
            회원 관리
        </div>
      </div>
      <div class="container_full table_area">
        <div class="container_fixed">
            <div class="table">
              <div class="header">
                   
                    <div class="info_wrap">
                        <div class="info_set">
                            <div class="area">
                                아이디
                            </div>
                            <div class="area">
                                이름
                            </div>
                            <div class="area">
                                이메일
                            </div>
                        </div>
                    </div>
                    <div class="func_area">
                        선택
                    </div>
                </div>
                <div class="table_body">

                  <!-- 회원 수 만큼 -->
                  <%if(users.length > 0) {%>
                    <% users.map((user, idx) => { %>
                      <div class="item_wrap">
                        <div class="item">
                         
    
                          <div class="info_wrap"> 
                              <div class="info_set">
                                  <div class="user_id">
                                      <%=user.id%>
                                  </div>
                                   
                                  <div class="user_name">
                                      <%=user.name%>
                                  </div>
                                  <div class="user_email">
                                      <%=user.email%>
                                  </div>
                              </div>
                          </div>
    
                          <div class="func_area">
                              <div class="btn_set">
                                <a href="/admin/users/detail/<%=user.id%>" class="btn_basic positive">상세 정보</a>
                                <a href="#" class="btn_basic negative">삭제</a>
                              </div>
                          </div>
                        </div>
                      </div>
                    <% }) %>
                    
                  <% } %>
                  <!-- 회원 수 만큼 -->

                </div>
            </div>
          </div>
      </div>
      <div class="container_full cart_check_area">
        <div class="container_fixed">
            <div class="item_wrap">
                <div class="check_box" style="display:none;">
                    <input id="cartAll0" name="cartAll0" class="form_check cart_all" type="checkbox"> 
                    <label for="cartAll0" class="">전체선택</label>
                </div>
         
            </div>
        </div>
      </div>
      <div class="container_full btn_area">
        <div class="container_fixed btn_wrap">
        </div>
      </div>

    </div>
  </div> 
</body>
</html>