<script defer>
  const coupons = document.querySelectorAll(".coupon a");
  
  coupons.forEach(item => {
    item.addEventListener("click", (e) => {
      const couponid = e.target.parentNode.getAttribute("id");
      addCoupon(couponid);
    })
  });

  async function addCoupon(couponid){
    console.log(couponid);

    const res = await fetch(`/order/coupon/${couponid}`, { 
      method: 'post',
      headers: {
        'Content-type': 'application/json'
      },
    });

    if(res.status == 200){
      return alert("쿠폰 다운완료");
    }else alert("잠시 후 다시 시도해주세요");
    
  }
</script>