<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- css 초기화 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/reset-css@5.0.1/reset.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <!-- 구글폰트 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Noto+Sans+KR:wght@100;300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <!-- 구글 아이콘 -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <!-- swiper -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />

    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

    <title>SWEG MALL</title>
    <script defer src="/js/compare.js"></script>
    <!-- <script defer src="./example.js"></script> -->
  </head>
  <style>
    .swiper {
      width: 100%;
      height: 100%;
    }
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .swiper-button-next:after,
    .swiper-button-prev:after {
      font-size: 16px;
      color: #888;
    }
    .swiper-button-next {
      right: -9px;
    }
    .swiper-button-prev {
      left: -9px;
    }
  </style>

  <body>
    <div class="main-baaner-wrap" style="background-color: #fff; height: auto">
      <%-include('./include/nav.ejs')%>
    </div>
    <div class="list_compare_wrap" id="comparison">
      <div class="container compare_top_wrap">
        <div class="title_area">
          <div class="title">비교하기</div>
          <div class="info">
            <!-- 세션에 담긴 아이템 개수 노출-->
            총 <span>0</span> 개의<br class="cp_br" />
            상품이 있습니다
          </div>
        </div>
        <div class="item_area">
          <%products.forEach(function(product, index) { %>
          <div class="item">
            <div class="form_row_inner">
              <select class="form_text select_product">
                <option value="">상품선택</option>
                <option class="active_selected"
                  value="<%=product.id%>"
                  data-proImg="<%=product.img%>"
                  data-proName="<%=product.name%>"
                  data-proModel="<%=product.model%>"
                >
                  <%=product.name%>
                </option>
              </select>
            </div>
            <div class="pro_box">
              <div class="pro_box_wrap">
                <div class="pro_img">
                  <!-- Swiper -->
                  <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                      <div class="swiper-slide">
                        <img src="<%=product.img%>" alt="<%=product.name%>" />
                      </div>
                      <div class="swiper-slide">
                        <img src="/img/list/2022012416231258088.png" />
                      </div>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                  </div>
                </div>
                <!-- Swiper JS -->
                <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

                <!-- Initialize Swiper -->
                <script>
                  var swiper = new Swiper(".mySwiper", {
                    navigation: {
                      nextEl: ".swiper-button-next",
                      prevEl: ".swiper-button-prev",
                    },
                  });
                </script>
                <div class="info_wrap">
                  <div class="pro_name"><%=product.name%></div>
                  <div class="pro_model_name"><%=product.model%></div>
                  <div class="pro_price"><%=product.price%></div>
                </div>
              </div>
              <div class="btn_set">
                <a href="#" class="btn_basic negative">쇼핑백</a>
              </div>
            </div>
          </div>
          <%})%>
        </div>
      </div>
    </div>
    <div class="compare_data_area">
      <div class="container">
        <div class="container_full compare_data_area">
          <div class="container_fixed compare_top_wrap">
            <div class="depth_wrap">
              <div class="depth1">구분</div>
              <div class="depth2">
                <div class="item">
                  <div class="title">사이즈</div>
                  <div class="contents_set">
                    <%products.map(function (product) {%>
                    <div class="contents"><%=product.name%></div>
                    <%})%>
                  </div>
                </div>
                <div class="item">
                  <div class="title">모델명</div>
                  <div class="contents_set">
                    <%products.map(function (product) {%>
                    <div class="contents"><%=product.model%></div>
                    <%})%>
                  </div>
                </div>
                <div class="item">
                  <div class="title">컬러</div>
                  <div class="contents_set">
                    <%products.map(function (product) {%>
                    <div class="contents"><%=product.color%></div>
                    <%})%>
                  </div>
                </div>
                <div class="item">
                  <div class="title">가격</div>
                  <div class="contents_set">
                    <%products.map(function (product) {%>
                    <div class="contents"><%=product.price%></div>
                    <%})%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%-include('./include/footer.ejs')%>
  </body>
</html>

<script defer>
  const selectBoxDefault = document.querySelectorAll(".select_product");
  const itemBox = document.querySelectorAll(".item_area .item");
  const itemCount = document.querySelector(".info span");
  const selectedOption = document.querySelectorAll(".active_selected")
  //총 개수 카운트
  if (itemBox) {
    itemCount.innerText = itemBox.length;

    //itemBox일때 select박스 option으로 active
    selectedOption.forEach((btn)=>{
      btn.setAttribute("selected", true);
    })
  }
</script>
