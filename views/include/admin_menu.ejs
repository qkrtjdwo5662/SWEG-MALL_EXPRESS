  text-decoration: none;
  padding: 20px;
  display: block;
  color: #000;
  font-weight: bold;
}
body .wrap .menu ul li a:hover {
  background: #333;
  color: #fff;
}
body .wrap .menu ul li a.clicked {
  background: #333;
  color: #fff;
}
</style>

<script defer>
  const menuList = document.querySelectorAll(".menu ul li a");
  
  const link = document.location.href;
  
  if(link == 'http://localhost:4000/admin'){
    menuList[0].className = 'clicked';
  }else if(link.includes('/admin/users')){
    menuList[1].className = 'clicked';
  }else if(link.includes('/admin/products')){
    menuList[2].className = 'clicked';
  }else if(link.includes('/admin/orders')){
    menuList[3].className = 'clicked';
  }



</script>