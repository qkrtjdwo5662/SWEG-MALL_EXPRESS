<style>
body .wrap .menu {
  display: inline-block;
}
body .wrap .menu ul {
  list-style-type: none;
  padding: 0px;
  margin: 0px;
  width: 200px;
  min-width: 100px;
  background: #D6D6D6;
  height: 100%;
  overflow: auto;
  position: fixed;
}
